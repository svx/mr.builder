{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "ubuntu-mini"
    },

    "provisioners": [{
        "type": "shell",
        "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/filesystem.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
        ],

    "override": {
        "virtualbox-iso": {
            "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
            }
        }
    }],

    "builders": [{
        "vm_name": "1404mini",
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ],

        "disk_size" : 10000,

        "iso_url": "/home/svx/ISO/mini.iso",
        "iso_checksum": "7297321c2fa6424417a548c85edd6e98",
        "iso_checksum_type": "md5",

        "http_directory" : "http",
        "http_port_min" : 9001,
        "http_port_max" : 9001,

        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "60m",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -hP now",
        
        "boot_command" : [
        "<esc><wait>",
        "/linux noapic preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed-vagrant.cfg ",
        "hostname={{user `hostname`}} ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "fb=false ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/initrd.gz -- <enter>"
        ]
     }],
        "post-processors": [{
        "type": "vagrant",
        "compression_level": 9
    }]
}

