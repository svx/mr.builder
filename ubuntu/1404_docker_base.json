{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "docker-dev"
    },

    "provisioners": [{
        "type": "shell",
        "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/docker.sh",
            "scripts/filesystem.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
        ],

    "override": {
        "virtualbox-iso": {
            "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
            }
        }
    }],

    "builders": [{
        "vm_name": "docker-dev",
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "1024"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"]
        ],

        "disk_size" : 10000,

        "iso_url": "/home/svx/ISO/ubuntu-14.04-server-amd64.iso",
        "iso_checksum": "01545fa976c8367b4f0d59169ac4866c",
        "iso_checksum_type": "md5",

        "http_directory" : "http",
        "http_port_min" : 9001,
        "http_port_max" : 9001,

        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "60m",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -hP now",

        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-vagrant.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ]
    }],

    "post-processors": [{
        "type": "vagrant",
        "output": "docker-base.box",
        "keep_input_artifact": true,
        "compression_level": 9
    }]
}

